@model MolinaInmobilaria.Models.Usuario

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            
           @Html.DisplayNameFor(model => model.Avatar)
           
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Avatar" alt="Avatar" width="80px" style="border-radius: 20px;"> 
            
        </dd>
        
        <dt class = "col-sm-2">
            <span>Rol</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RolNombre)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new {  id = Model.Id  }, new{@class="btn btn-primary"}) 
    @if(User.IsInRole("Admin")){
        <a asp-action="Index" class="btn btn-primary">Volver a la Lista</a>
    }
</div>
