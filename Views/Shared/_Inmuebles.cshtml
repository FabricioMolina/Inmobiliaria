@model IEnumerable<MolinaInmobilaria.Models.Inmueble>

@{
    ViewData["Title"] = "Nuestros Inmuebles";
    var msj = ViewBag.Data;
}
<h1>@msj</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ambientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                Precio Mensual
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ambientes)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Latitud)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Longitud)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Estado)*@
                @if(item.Estado == 0){
                    <span>No Disponible</span>
                }else{
                    <span>Disponible</span>
                }
            </td>
            <td>
               @Html.ActionLink(item.Propietario.Nombre + " " + item.Propietario.Apellido, "PorPropietario", new { id=item.Propietario.Id}); 
            </td>
            
            <td>
            @Html.ActionLink("Seleccionar Inmueble", "Create", new {  id=item.Id  }, new{@class="btn btn-primary"} )
            </td>
        </tr>
}
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}