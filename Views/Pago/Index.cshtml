@model IEnumerable<MolinaInmobilaria.Models.Pago>

@{
    ViewData["Title"] = "Lista de Pagos";
    
}
<h1>Lista de Pagos</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                <span>Codigo de Pago</span>
            </th>
            <th>
                <span>Codigo del Contrato</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                Cantidad de Cuotas
            </th>
            <th>
                Cuota Numero
            </th>     
            <th>
                Tipo de Pago
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink(item.Id_Contrato+"", "Details", "Contrato", new {  id=item.Id_Contrato  })
            </td>
            <td>
                @{
                    string fecha = item.Fecha.ToString("MM/dd/yyyy");            
                }
                @(fecha)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad_Cuotas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_Cuota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Pago)
            </td>
            <td>
            @Html.ActionLink("Detalles", "Details", new {  id=item.Id  }, new{@class="btn btn-primary"} )
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new{@class="btn btn-primary"}) 
            @Html.ActionLink("Borrar", "Delete", new {  id=item.Id  }, new{@class="btn btn-primary"})
            </td>
        </tr>
}
    </tbody>
</table>
