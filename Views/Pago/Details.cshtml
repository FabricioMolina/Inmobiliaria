@model MolinaInmobilaria.Models.Pago

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles del Pago #@Model.Id</h1>

<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            Codigo del Contrato
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_Contrato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class = "col-sm-2">
            Cantidad de Cuotas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad_Cuotas)
        </dd>
        <dt class = "col-sm-2">
            Tipo de Pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo_Pago)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Renovar", "Edit", new {  id = Model.Id  }) 
    <a asp-action="Index" class="btn btn-primary">Volver a la Lista</a>
</div>
